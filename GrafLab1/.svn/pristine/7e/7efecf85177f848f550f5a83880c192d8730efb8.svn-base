    public partial class Form1 : Form
    {
        private Graf graf1;
        private Graf graf2;
        private Graf grafResult;
        private System.Drawing.Graphics grafic;

        public Form1()
        {
            InitializeComponent();
            this.grafic = this.CreateGraphics();
        }

        private void Form1_Load(object sender, EventArgs e)
        {

